---
// Layouts
import Layout from "../layouts/Layout.astro";

// Components
import ProjectCard from "../components/ProjectCard.astro";
import { Icon } from "astro-icon/components";

// Icons
import { RiArrowRightUpLine } from "react-icons/ri";
import { PiLightbulbFill } from "react-icons/pi";

// Data
import projectsData from "../constants/projects.json";
import socialsData from "../constants/socials.json";

const projects = projectsData;
const socials = socialsData;
---

<Layout title="Elorm Oscar">
	<h1 class="text-primary font-serif text-[2.5rem] tracking-tight">Elorm Oscar</h1>
	<div class="flex items-center gap-1.5 font-medium tracking-tight">
		<h2 class="text-title text-base">designer</h2>
		<div class="bg-title mt-1.5 h-1 w-1 rounded"></div>
		<h2 class="text-title text-base">developer</h2>
		<div class="bg-title mt-1.5 h-1 w-1 rounded"></div>
		<h2 class="text-title text-base">researcher</h2>
	</div>

	<p class="bio pt-4 text-sm">
		Hi there, I'm Elorm Oscar, a 19 y/o Tech enthusiast with a strong background in software engineering and cybersecurity, 
		<span class="text-black">trained at IPMC Ghana</span>. I've 
		<span class="text-black">built secure</span> and 
		scalable applications, led cross-functional teams, and 
		<span class="text-black">designed engaging digital experiences</span>. 
		My achievements span cloud, AI, and open source, always blending technical excellence 
		<span class="text-black">with creative</span> problem-solving. 
		<span class="text-black">@itcreativetbb</span>
	</p>

	<div class="socials grid w-fit grid-cols-3 gap-2 pt-4 tracking-tight md:flex md:flex-row md:items-start">
		{
			socials.map((social) => (
				<a
					href={social.url}
					target={social.target}
					rel={social.target === "_blank" ? "noopener noreferrer" : undefined}
					class="group flex items-center transition duration-150 ease-in-out underline-offset-4 md:hover:text-primary md:hover:underline">
					<Icon name={social.icon} size={14} class="mr-1.5" />
					<span class="text-sm">{social.name}</span>
					<RiArrowRightUpLine className="opacity-0 transition-opacity duration-150 md:group-hover:opacity-100" />
				</a>
			))
		}
	</div>

	<section class="pt-8">
		<h2 class="text-title font-medium tracking-tight">Projects</h2>
		<div class="pt-1.5">
			{projects.map((project) => <ProjectCard project={project} />)}
		</div>
		<div class="group">
			<p
				class="mt-4 w-fit rounded-md border border-body/20 bg-hoverColor/60 px-2 py-1 text-xs text-body transition-all duration-300 ease-in-out">
				<PiLightbulbFill
					className="md:group-hover:text-primary -mt-0.5 inline-block transition-all duration-300 ease-in-out"
				/>
				Feel free to explore my
				<a
					href="https://github.com/itcreativetbb?tab=repositories"
					rel="noopenner noreferrer"
					target="_blank"
					class="font-medium text-body underline underline-offset-2 transition-all duration-150 ease-in-out md:hover:text-primary md:group-hover:text-primary"
					>GitHub</a
				> for more projects. Most of them are open-source.
			</p>
		</div>
	</section>

	<div class="flex w-full flex-col items-center justify-center pt-8">
		<Icon name="signature" width={150} height={97.04} />
	</div>
</Layout>
